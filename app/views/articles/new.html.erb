<h1>New Article</h1>
<%= form_for(@new_article) do |f| %>
  <div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
  <%= f.label :content %>
  <%= f.text_area :content, size: "70x5", class: 'form-control' %>
  </div>
  <%= f.submit %>
<% end %>
