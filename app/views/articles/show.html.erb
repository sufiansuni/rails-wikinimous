<div class="row py-3">
  <div class="col-2"></div>
  <div class="col-8">
  <div>
    <h1 class="d-inline"><%= @article.title %></h1>
    <%= link_to "Edit", edit_article_path(@article) %>
    <%= link_to "Delete",
                article_path(@article),
                method: :delete,
                data: { confirm: "Are you sure?" } %>
  </div>
  <hr>
  <div>
    <%= @article.content %>
  </div>
  <div class="col-2"></div>
</div>
